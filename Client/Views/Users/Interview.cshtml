    <script>
        function Accept() {
            debugger;
            var interview = new Object();
            interview.EmployeeId = 1;
            interview.Status = "Interview Accept"; //Waitting, Decline Interview, Accept Interview, Interview Done, Interview Failed, Interview Success
            $.ajax({
                "url": "/Interviews/AcceptInterview",
                "type": "PUT",
                "dataType": "json",
                "data": interview
            }).then((result) => {
                debugger
                if (result.statusCode == 200) {
                    Swal.fire(
                        'Success!',
                        'Login Success',
                        'success')
                }
            })
        }
        function Decline() {
            var interview = new Object();
            interview.Status = "Decline Interview"; //Waitting, Decline Interview, Accept Interview, Interview Done, Interview Failed, Interview Success
            interview.Reason = $("#ReasonText").val();
            $.ajax({
                "url": "/Users/DeclineInterview",
                "type": "Post",
                "dataType": "json",
                "data": interview
            }).then((result) => {
                debugger
                if (result.statusCode == 200) {
                    Swal.fire(
                        'Success!',
                        'Login Success',
                        'success').then(() => {
                            $("#MyModal").close();
                        });
                }
                else {
                    Swal.fire(
                        'Failed!',
                        'Oops.',
                        'failed'
                    )
                }
            })
        }
    </script>
