    <script>
        function Confirm() {
            Swal.fire({
                title: 'Are you sure?',
                text: "You Want to Attending the Invitation",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, I Agree it!'
            }).then((result) => {
                debugger;
                if (result.value) {
                    debugger;
                    var interview = new Object();
                    interview.EmployeeId = 1;
                    interview.Status = "Ready Interview";
                    $.ajax({
                        "url": "/Interviews/AcceptInterview",
                        "type": "PUT",
                        "dataType": "json",
                        "data": interview
                    }).then((result) => {
                        if (result.data !=0) {
                            Swal.fire(
                                'Success',
                                'You Agree With Interview Invitation',
                                'success'
                            );

                        } else {
                            Swal.fire(
                                'Failed',
                                'Your Not Agree With Interview Invitation',
                                'failed'
                            );
                        }
                    })
                }
            })
        }
        function Decline() {

            var interview = new Object();
            interview.Status = "Decline Interview"; //Waitting, Decline Interview, Accept Interview, Interview Done, Interview Failed, Interview Success
            interview.Reason = $("#ReasonText").val();
            $.ajax({
                "url": "/Users/DeclineInterview",
                "type": "Post",
                "dataType": "json",
                "data": interview
            }).then((result) => {
                debugger
                if (result.statusCode == 200) {
                    Swal.fire(
                        'Success!',
                        'Login Success',
                        'success').then(() => {
                            $("#MyModal").close();
                        });
                }
                else {
                    Swal.fire(
                        'Failed!',
                        'Oops.',
                        'failed'
                    )
                }
            })
        }
    </script>
