            </div>
        </div>
    </div>

    <!--Modal-->
    <div class="modal fade" id="myModal" role="dialog" aria-labelledby="ModelTittle" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="ModelTittle">Interview Invitation</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="recipient-name" class="col-form-label">Recipient:</label>
                                    <select class="select2" multiple="multiple" data-placeholder="To" style="width: 100%;" id="InvitationInterview">
                                        @foreach (var emp in ViewBag.Employees)
                                        {
                                            <option value="@emp.Id">@emp.FirstName @emp.LastName</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Interview Date:</label>

                                    <div class="input-group date">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        <input type="text" class="form-control pull-right InterviewDate" id="datepicker">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Interview Time:</label>
                                    <div class="bootstrap-timepicker">
                                        <div class="input-group">
                                            <input type="text" class="form-control timepicker" id="InterviewTime">

                                            <div class="input-group-addon">
                                                <i class="fa fa-clock-o"></i>
                                            </div>
                                        </div>
                                        <!-- /.input group -->
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Sites</label>
                                    <select class="form-control select2" id="SiteText" style="width: 100%;">
                                        <option selected disabled>Select Sites</option>
                                        @foreach (var site in ViewBag.Sites)
                                        {
                                            <option value="@site.Id">@site.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="message-text" class="col-form-label">Notes:</label>
                                    <textarea class="form-control" id="NoteText"></textarea>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="Insert();">Send message</button>
                </div>
            </div>
        </div>
    </div>

    <!-- END Modal -->
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Data List Interviews</h4>

                    <div class="table-responsive m-t-40">
                        <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>Name</th>
                                    <th>Invitation Date</th>
                                    <th>Site Name</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>No</th>
                                    <th>Name</th>
                                    <th>Invitation Date</th>
                                    <th>Site Name</th>
                                    <th>Status</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @foreach (var interview in ViewBag.Interviews)
                                {
                                <tr>
                                    <td></td>
                                    <td>@interview.EmployeeName</td>
                                    <td>@Convert.ToDateTime(interview.InterviewDate).ToString("dd-MMMM-yyyy") </td>

                                    <td>@interview.SiteName</td>
                                    @if (interview.Status == "Waiting Interview")
                                    {
                                        <td><span class="label label-danger text-center ml-lg-4" style="width:60%;">@interview.Status</span></td>
                                    }@if (interview.Status == "Interview Done")
                                    {
                                        <td><span class="label label-success text-center ml-lg-4" style="width:60%;">@interview.Status</span></td>
                                    }@if (interview.Status == "Waiting Result")
                                    {
                                        <td><span class="label label-primary text-center ml-lg-4" style="width:60%;">@interview.Status</span></td>
                                    }@if (interview.Status == "Accept Placement")
                                    {
                                        <td><span class="label label-primary text-center ml-lg-4" style="width:60%;">@interview.Status</span></td>
                                    }@if(interview.Status == "Failed Placement")
                                    {
                                        <td><span class="label label-primary text-center ml-lg-4" style="width:60%;">@interview.Status</span></td>
                                    }
                                </tr>
                                }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
